<Window x:Class="FromExcelWord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FromExcelWord"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="450">
    <StackPanel>
        <Menu Background="gray">
            <MenuItem Header="Открыть" Click="MenuItem_Click"/>

        </Menu>
       
        <Button Content="Количество задач у сотрудников по отделам" Background="Green" BorderBrush="Black" Click="Button_Click_3"/>
        <Button Content="Отчет в Word" Background="Green" BorderBrush="Black" Click="Button_Click_4"/>
        <DataGrid x:Name="datagrid1" Height="200" Width="Auto"/>
        <DataGrid x:Name="datagrid2" Height="200" Width="Auto"/>
    </StackPanel>
</Window>
